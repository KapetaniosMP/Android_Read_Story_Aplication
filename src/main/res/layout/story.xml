<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/story"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffecca"
    tools:context=".StoryActivity">

    <include
        layout="@layout/header"
        android:id="@+id/storyHeader" />

    <Button
        android:id="@+id/button0"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:clickable="false"
        android:focusable="false"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/storyHeader" />
    <Button
        android:id="@+id/button1"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:text=""
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storyHeader"
        android:layout_marginVertical="20dp" />
    <Button
        android:id="@+id/button2"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:focusable="false"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/storyHeader" />

    <ImageView
        android:id="@+id/storyPlayIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:layout_marginEnd="13dp"
        android:contentDescription="headerOpenListIcon"
        android:focusable="true"
        android:padding="12dp"
        android:src="@drawable/play_icon_negative"
        app:layout_constraintEnd_toStartOf="@+id/storyReplayIcon"
        app:layout_constraintTop_toBottomOf="@+id/storyHeader"
        android:layout_marginVertical="20dp"/>
    <ImageView
        android:id="@+id/storyReplayIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="headerOpenListIcon"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/restart_icon_negative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storyHeader"
        android:layout_marginVertical="20dp"/>
    <ImageView
        android:id="@+id/storyStopIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:layout_marginStart="19.7dp"
        android:contentDescription="headerOpenListIcon"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/stop_icon_negative"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/storyHeader"
        android:layout_marginVertical="20dp"/>





    <ScrollView
        android:id="@+id/storyScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/storyHeader"
        android:layout_marginTop="121dp"
        android:layout_marginBottom="55dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/storyImageView"
                android:contentDescription="headerOpenListIcon"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/storyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="TextView"
                android:textSize="20sp" />
        </LinearLayout>


    </ScrollView>



    <TextView
    android:id="@+id/storyPageNumber"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:text="0"
    android:textColor="@color/black"
    android:textSize="35sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/storyScrollView" />
    <Button
        android:id="@+id/button3"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginVertical="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:clickable="false"
        android:focusable="false"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/storyPageNumber"
        app:layout_constraintTop_toBottomOf="@+id/storyScrollView" />
    <Button
        android:id="@+id/button4"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:focusable="false"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/storyPageNumber"
        app:layout_constraintTop_toBottomOf="@+id/storyScrollView" />
    <ImageView
        android:id="@+id/storyLeftIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:layout_marginEnd="22dp"
        android:contentDescription="headerOpenListIcon"
        android:focusable="true"
        android:padding="12dp"
        android:src="@drawable/left_icon_negative"
        app:layout_constraintEnd_toStartOf="@+id/storyPageNumber"
        app:layout_constraintTop_toBottomOf="@+id/storyScrollView"
        android:layout_marginVertical="5dp"/>
    <ImageView
        android:id="@+id/storyRightIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:layout_marginStart="23dp"
        android:contentDescription="headerOpenListIcon"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/right_icon_negative"
        app:layout_constraintStart_toEndOf="@+id/storyPageNumber"
        app:layout_constraintTop_toBottomOf="@+id/storyScrollView"
        android:layout_marginVertical="5dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>